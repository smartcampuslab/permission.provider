<xsd:schema version="1.0" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified">
	<xsd:element name="resources" type="resources" />
	<xsd:complexType name="resources">
		<xsd:sequence>
			<xsd:choice minOccurs="0" maxOccurs="unbounded">
				<xsd:element name="resource" type="resource" />
			</xsd:choice>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="resource">
		<xsd:sequence>
            <xsd:element name="description" type="xsd:string" minOccurs="0"/>
		</xsd:sequence>
        <xsd:attribute name="resourceUri" type="xsd:string" use="required" />
		<xsd:attribute name="name" type="xsd:string" use="required" />
		<xsd:attribute name="authority" type="xsd:string" use="required" />
		<xsd:attribute name="resourceType" type="xsd:string" use="optional" />
        <xsd:attribute name="clientId" type="xsd:string" use="optional" />
        <xsd:attribute name="approvalRequired" type="xsd:boolean" use="optional" />
        <xsd:attribute name="accessibleByClient" type="xsd:boolean" use="optional" />
	</xsd:complexType>
</xsd:schema>
